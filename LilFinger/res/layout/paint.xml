<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" >

        <View
            android:id="@+id/violet"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/violet" />

        <View
            android:id="@+id/red"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/violet"
            android:background="@color/red" />

        <View
            android:id="@+id/orange"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/red"
            android:background="@color/orange" />

        <View
            android:id="@+id/yellow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/orange"
            android:background="@color/yellow" />

        <View
            android:id="@+id/green"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/yellow"
            android:background="@color/green" />

        <View
            android:id="@+id/cyan"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/green"
            android:background="@color/cyan" />

        <View
            android:id="@+id/blue"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/cyan"
            android:background="@color/blue" />

        <View
            android:id="@+id/marker"
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:background="@color/gray"
            android:layout_alignLeft="@+id/red"
            android:layout_below="@+id/red" />
        
        <View
            android:id="@+id/cancel"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:background="@drawable/cancel" />

    </RelativeLayout>

    <com.moveinblue.lilfinger.PaintingView
        android:id="@+id/painting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>